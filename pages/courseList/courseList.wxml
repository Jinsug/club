<!-- 引入过滤器 -->
<wxs module="filter" src="../../utils/filters.wxs"></wxs>
<!-- 页面开始 -->
<view class="wapper">
   <!-- weekDates -->
   <view class="weekDiv">
        <view class="weekDate" wx:for="{{currentWeek}}" wx:for-item="data" wx:for-index="index" >
        <!-- 今天 -->
             <view class="preDate toDay" wx:if="{{'今天' == data.index}}"  data-chooseDate="{{data.date}}"  data-chooseIndex="{{data.index}}" bindtap="getChooseDayData" >{{filter.week_date(data.index)}}</view>
        <!-- 其他天 -->
         <view class="{{dou_dates[index]}}" wx:if="{{'今天' != data.index}}" data-chooseDate="{{data.date}}" data-chooseIndex="{{data.index}}" bindtap="getChooseDayData" >{{filter.week_date(data.index)}}</view>
        </view>
   </view>

<!-- 填充高度 -->
<view class="fill"></view>

<!-- 团体课程 -->
<view class="courseList">
      <!-- 有数据 -->
      <view wx:for="{{courseList}}" wx:for-item="course" wx:for-index="index" class="course" wx:if="{{hasData == 1 }}" >
          <view class="preCourse">
                  <view class="coursePicDiv" style="width:{{pictureWidth}};height:{{pictureHeight}}" >
                          <image src="{{base_picture_url}}/{{course.image}}" class="coursePic" mode="aspectFill"></image>
                  </view>

                  <!-- 右边的内容 -->
                  <view class="right" style="height:{{pictureHeight}}">
                              <view class="courseName">{{course.courseName}}</view>
                              <view class="coachName">教练:{{course.coachName}}</view>
                              <view class="time coachName">时间: {{course.startTime}}-{{course.endTime}} </view>
                              <view class="peoples">{{filter.toFixed(course.joinNum,0)}}人/{{filter.toFixed(course.total,0)}}人</view>
                              <view class="full" wx:if="{{course.join >= course.total}}" >满员</view>
                              <view class="toBeFull" wx:else bindtap="appointment" data-courseid="{{course.id}}">预约</view>
                  </view>
               
          </view>
      </view>

       <!-- 没有数据 -->
      <view class="hasNoData" wx:if="{{hasData == 0}}" >
             <view class="noData">
                 <!-- 图像 -->
                 <view class="noDataPicDiv">
                     <image src="https://www.ecartoon.com.cn/ecartoon-weixin/img/Look-not-happy@2x.png" class="noDataPic"></image>
                 </view>
                 <view class="noDataFont">
                     <view>暂无数据</view>
                     <view>去看看别的</view>
                 </view>
             </view>
      </view>
</view>

<!-- 登录按钮 -->
<button class='login_button' wx:if="{{login_button}}" open-type='getUserInfo' bindgetuserinfo='wechatLogin'></button>

</view>