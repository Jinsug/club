page{
  width: 100%;
  height: 100%;
}

.wraper{
  position: relative;
  width: 100%;
  height: 100%;
}

.no-data{
  position: absolute;
  top: 40%;
  left: 40%;
  text-align: center;
  font-size: 12px;
  color: #8f8e8e;
}

.no-data > image{
  width: 30px;
  height: 30px;
}

.ticket-list{
  padding: 10px;
}

.ticket-li{
  overflow: hidden;
}

.ticket-content{
  float: left;
  width: 100%;
  height: 90px;
  background-color: #FFF;
  margin-bottom: 20rpx;
}

.ticket-content > image{
  width: 100%;
  height: 80px;
}

.activeTicket{
   background: #28B2D9;
   color: white;
   font-size: 32rpx;
   width: 92%;
   padding-top: 30rpx;
   padding-bottom: 30rpx;
   border-radius: 10rpx;
   margin: 0 auto;
   text-align: center;
   margin-bottom: 26rpx;
}