/* default css */
Page{
  margin: 0;
  padding: 0;
  widows: 100%;
  height: 100%;
  background: #f0f0f2;
}

image{
  display: block;
  width: 100%;
  height: 100%;
}

.content{
  width: 100%;
  height: 100%;
}

.upper{
  background: white;
  padding-top: 50rpx;
}

.cardIcon{
  position: relative;
  width: 650rpx;
  height: 350rpx;
  background: url('http://ecartoon.com.cn/miniProgram/coach/img/cartoon-background@2x.png') no-repeat;
  background-size: 100% 100%;
  margin: 0 auto;
  margin-bottom: 50rpx;
  color: white;
}

.title{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  font-size: 32rpx;
}

.priceDiv{
  position: absolute;
  left: 30rpx;
  bottom: 90rpx;
  font-size: 22rpx;
}

.price{
  font-size: 34rpx;
}

.orderno{
  position: absolute;
  left: 30rpx;
  bottom: 22rpx;
  font-size: 26rpx;
}

.orderno>text{
  padding-left: 10rpx;
}

.info{
}

.line1{
  padding: 0 15%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.signCounts{
   border-left: 1rpx solid #999999;
   border-right: 1rpx solid #999999;
   padding: 0 30rpx;
}

.line2{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #ff4401;
  padding: 10rpx 8%;
}

.next{
  background: white;
  padding-top: 30rpx;
}

.linex{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin: 0 18rpx;
  border-top: 1rpx solid #f0f0f2;
}

.titlex{
  font-size: 30rpx;
}

.moreDiv{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.moreFont{
   font-size: 24rpx;
   color: #999999;
}

.moreIcon{
  width: 32rpx;
  height: 32rpx;
  padding-left: 10rpx;
}


.remindIcon{
  width: 66rpx;
  height: 66rpx;
  margin: 0 auto;
  padding: 20rpx 0;
}

.remindFont{
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

