page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.wraper{
  width: 100%;
  height: 100%;
  font-size: 14px;
  color: #FFF;
}

.productImage{
  height: 171px;
}

.productImage > image{
  width: 100%;
  height: 100%;
}

.productName{
  padding: 10px;
  color: #444;
  border-bottom: 1px solid #F0F0F2;
}

.productWellNum{
  padding: 10px;
  overflow: hidden;
  font-size: 12px;
  color: #BBB;
  border-bottom: 1px solid #F0F0F2;
}

.productWellNum-left{
  float: left;
}

.productWellNum-right{
  float: right;
}

.productPrice{
  padding: 10px;
  overflow: hidden;
  font-size: 12px;
  color: #BBB;
}

.productPrice-left{
  float: left;
}

.productPrice-right{
  float: right;
  color: #FB8C00;
}

.productRemark{
  padding: 10px;
  color: #BBB;
}

.productStrartTime{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  overflow: hidden;
}

.selectStartTime{
  float: left;
  width: 60%;
  height: 30px;
  overflow: hidden;
  background-color: #F0F0F2;
  text-align: center;
  line-height: 30px;
}

.selectStartTime-left{
  float: left;
  margin-left: 20px;
  font-size: 12px;
  color: #BBB;
}

.selectStartTime-right{
  float: left;
  margin-left: 20px;
  color: #0076FF;
}

.goBuy{
  float: right;
  width: 40%;
  height: 30px;
  background-color: #FB8C00;
  text-align: center;
  line-height: 30px;
}