.banner > image{
  width: 100%;
  height: 360px;
}

.hongbao{
  padding: 10px;
  overflow: hidden;
}

.hongbao-left{
  float: left;
}

.hongbao-left > image{
  width: 66px;
  height: 72px;
}

.hongbao-right{
  float: left;
  font-size: 14px;
}

.no-data-image{
  margin: 0 auto;
  margin-top: 20px;
  width: 30px;
  height: 30px;
}

.no-data-image > image{
  width: 100%;
  height: 100%;
}

.noDataFont{
  text-align: center;
  color: #999;
  font-size: 12px;
}

.oneCard-body{
  padding: 10px;
  overflow: hidden;
  border-bottom: 1px solid #F0F0F2;
}

.onCard-image{
  float: left;
  width: 114px;
  height: 68px;
}

.oneCard-contant{
  float: right;
  width: 60%;
}

.onCard-info{
  margin-top: 5px;
  height: 25px;
  overflow: hidden;
}

.onCard-name{
  float: left;
  color: #444;
}

.sell-out{
  float: right;
  margin-top: 2px;
  padding: 0 5px;
  color: #FF4401;
  font-size: 12px;
  border: 1px solid #FF4401;
  border-radius: 10px;
}

.onCard-price{
  margin-top: 3px;
  color: #FF4401;
  font-size: 12px;
}

.onCard-remark{
  margin-top: 3px;
  width: 100%;
  overflow: hidden;
  color: #BBB;
  font-size: 11px;
}