page{
   width: 100%;
   height: 100%;
   background-color: #EFEFF1;
}

.personInfo{
    height: 300rpx;
    position: relative;
}

.BGP{
    width: 100%;
    height: 100%;
}

.person{
   position: absolute;
   top: 0;
   left: 0;
   width: 100%;
   height: 300rpx;
   overflow: hidden;
   background-color: rgba(0, 0, 0, 0.5); 
}


.personImageDiv{
    float: left;
    margin-left: 25%;
    margin-top: 10%;
    width: 110rpx;
    height: 110rpx;
    
}

.personImage{
   width: 100%;
   height: 100%;
   border-radius: 50%;
}

.others{
   float: left;
   margin-left: 42%;
   margin-top: -14%;
}

.nickName{
    font-size: 30rpx;
    color: white;
    font-weight: 700;
}

.description{
    font-size: 24rpx;
    color: white;
    margin-top: 5rpx;
}

.count{
    font-size: 48rpx;
    color: #FE970F;
    margin: 0 30rpx;
}


.linksPage{
   width: 100%;
   height: auto;
   margin-top: 4%;
}

.pre{
    width: auto;
    height: auto;
    padding: 20rpx 30rpx;
    border-top: 2rpx solid #BABABA;
    overflow: hidden;
    background-color: white;
}

.pre:last-child{
    border-bottom: 2rpx solid #BABABA;
}

.title{
    float: left;
    left: 0;
    bottom: 0;
    font-size:28rpx;
    color: #5B5A5B;
}

.link{
    float: right;
    right: 0;
    bottom: 0;
    color: #5B5A5B;
    font-size: 28rpx;
}

.login{
  float: left;
  margin-left: 35%;
  margin-top: -34%;
  width: 50%;
  height: auto;
}

.login_div{
  width: 200rpx;
  height: 200rpx;
}

.login_button{
  width: 80%;
  height: 80%;
  border-radius: 50%;
  color: white;
  text-align: center;
  line-height: 160rpx;
  background-color: #41B44B;
}