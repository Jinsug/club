page{
   width: 100%;
   height: auto;
   background-color: #EFEFF1;
   border-top: 2rpx solid #BABABA;
}

.content{
    width: 100%;
    height: auto;
    background-color: white;
    margin-top: 16rpx;
}

.pre{
    overflow: hidden;
    border-top: 2rpx solid #BABABA;
    padding: 24rpx;
}

.pre:last-child{
    border-bottom: 2rpx solid #BABABA;
}

.coachImageDiv{
    float: left;
    left: 0;
    bottom: 0;
    width: 80rpx;
    height: 80rpx;
}

.coachImage{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.coachName{
    float: right;
    right: 0;
    bottom: 0;
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.title{
    float: left;
    left: 0;
    bottom: 0;
    font-size: 28rpx;
}

.value{
    float: right;
    right: 0;
    bottom: 0;
    font-size: 28rpx;
    color: #A9A9A9;
   
}

.sure{
   position: fixed;
   left: 0;
   bottom: 0;
   width: 100%;
   height: auto;
   text-align: center;
   color: white;
   background-color: #FE970F;
   font-size: 32rpx;
   padding:16rpx 0;
}